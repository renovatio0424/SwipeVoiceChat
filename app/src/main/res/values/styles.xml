<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TransparentDialogFragment" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="text_color">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="style_button">
        <item name="android:background">@color/button_color</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="bottom_button">
        <item name="android:background">@drawable/background_google</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="bottom_card_button">
        <item name="android:background">@drawable/background_inactive_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
    </style>


    <style name="style_setting_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Theme.MyTheme" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">#5046C4</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->
    </style>

    <style name="MyDialogTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyCropTheme" parent="@style/Theme.AppCompat">
        <item name="colorPrimary">@color/main_color</item>
        <item name="titleTextColor">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="background_image_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@color/grey</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:tint">#6F000000</item>
    </style>

    <style name="chat_time_text_style">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="luna_package_style">
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/round_white_stroke</item>
    </style>

    <style name="meter_tv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="filter_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/background_inactive_color_round</item>
        <item name="android:backgroundTint">@color/main_color_inactive</item>
        <item name="android:drawableTint">@color/main_color_inactive</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="expand_line_extra">
        <item name="android:lineSpacingExtra">6dp</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_no_moon</item>
    </style>

    <style name="bubble_seekbar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:minHeight">4dip</item>
        <item name="android:maxHeight">4dip</item>
        <item name="android:thumbOffset">3dip</item>
        <item name="android:thumb">@drawable/thumb_image</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="luna_count_badge">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:background">@drawable/background_white_stroke_grey_</item>
        <item name="android:drawableLeft">@drawable/luna_shop_badge</item>
        <item name="android:drawablePadding">1dp</item>
        <item name="android:drawableTint">@color/shop_luna_color</item>
        <item name="android:elevation">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/shop_luna_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="shop_bonus_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/sub_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="shop_price_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">#7a7a7a</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="shop_error_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#7a7a7a</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="style_setting_desc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
